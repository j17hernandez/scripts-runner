{
  "scripts": [
    {
      "name": "generate-l10n",
      "command": "scripts\\generate_l10n.bat",
      "description": "Genera localizaciones (crea archivos ARB combinados)",
      "category": "Configuración Inicial"
    },
    {
      "name": "pub-get",
      "command": "flutter pub get",
      "description": "Instala dependencias Flutter",
      "category": "Configuración Inicial"
    },
    {
      "name": "generate-icons",
      "command": "scripts\\generate_icons.bat",
      "description": "Genera iconos de la aplicación",
      "category": "Configuración Inicial"
    },
    {
      "name": "build-runner",
      "command": "flutter pub run build_runner build --delete-conflicting-outputs",
      "description": "Genera archivos .g.dart",
      "category": "Configuración Inicial"
    },
    {
      "name": "run-chrome",
      "command": "flutter run -d chrome",
      "description": "Ejecuta la app en Chrome",
      "category": "Desarrollo"
    },
    {
      "name": "build-apk-split",
      "command": "flutter build apk --release --split-per-abi",
      "description": "APK por ABI (recomendado, menor tamaño)",
      "category": "Build Android"
    },
    {
      "name": "build-appbundle",
      "command": "flutter build appbundle --release",
      "description": "Android App Bundle (para Play Store)",
      "category": "Build Android"
    },
    {
      "name": "build-apk-universal",
      "command": "flutter build apk --release",
      "description": "APK universal (más pesado)",
      "category": "Build Android"
    },
    {
      "name": "build-ipa",
      "command": "flutter build ipa --release",
      "description": "Build iOS IPA (requiere macOS y Xcode)",
      "category": "Build iOS"
    },
    {
      "name": "build-ios-no-codesign",
      "command": "flutter build ios --release --no-codesign",
      "description": "Build iOS sin firma de código",
      "category": "Build iOS"
    },
    {
      "name": "launcher-icons",
      "command": "flutter pub run flutter_launcher_icons",
      "description": "Genera iconos con flutter_launcher_icons",
      "category": "Assets"
    }
  ]
}
